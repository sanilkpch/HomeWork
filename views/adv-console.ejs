<!DOCTYPE html>
<html lang="en">

<% include ./partials/head %>

	<body>
		<style>
		.red .active a,
		.red .active a:active {
			background-color: #2E9476 !important;
		}
		
		.form-control:focus {
			border-color: #FF4A45;
			box-shadow: inset 0 1px 1px #FFF, 0 0 8px #FF4A45;
		}
		</style>
		<div class="container-fluid main-content">
			<nav class="navbar navbar-default">
				<div class="container-fluid">

					<!-- Brand and toggle get grouped for better mobile display -->
					<div class="navbar-header">
						<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</button>
						<a class="navbar-brand" style="font-family: 'Open Sans', sans-serif;" href="#"><strong>HomeWork</strong><span style="font-weight: 100; font-size: 120%;"> advanced console</span></a>
					</div>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
						<ul class="nav navbar-nav navbar-right">
							<li><a href="#">Blog</a></li>
							<li><a href="#">Help</a></li>
							<li>
								<button type="button" class="btn btn-danger navbar-btn">Back</button>
							</li>
						</ul>
					</div>
					<!-- /.navbar-collapse -->
				</div>
				<!-- /.container-fluid -->
			</nav>
			<!-- nav bar over -->

			<!-- body starts here.. -->
			<div class="row">
				<div class="col-md-12 text-center">
					<h1 class="os-300">Advanced Console</h1>
					<p class="lead os-300">restricted entry</p>
				</div>
			</div>

			<!-- quick status -->
			<div class="row">
				<div class="col-sm-3 col-md-3 col-lg-4"></div>

				<!-- content goes here -->
				<div class="col-sm-6 col-md-6 col-lg-4 col-xs-12">
					<div class="alert alert-danger text-center" role="alert"><span class="glyphicon glyphicon-alert" aria-hidden="true"></span><strong> Hey !</strong> be careful when you make a change</div>
				</div>

				<div class="col-sm-3 col-md-3 col-lg-4"></div>
			</div>

			<!-- device status -->
			<!-- table -->
			<div class="row" style="margin-top: 15px;">
				<!-- content goes here -->
				<div class="col-md-1"></div>
				<div class="col-md-7">
					<div class="panel panel-danger">
						<div class="panel-heading">
							<h3 class="panel-title">Quick Look</h3>
						</div>
						<div class="panel-body">

							<div class="input-group">
								<input type="text" autofocus class="form-control" placeholder="Start typing...">
								<span class="input-group-btn"><button class="btn btn-danger" type="button">
									<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
								</button>
								</span>
							</div>
							<br>
							<!-- /input-group -->
							<table class="table table-hover table-responsive">
								<colgroup>
									<col span="1" style="width: 25%;">
									<col span="1" style="width: 20%;">
									<col span="1" style="width: 15%;">
									<col span="1" style="width: 40%;">
								</colgroup>

								<thead>
									<tr>
										<th>Property</th>
										<th>Status</th>
										<th>Change Status</th>
										<th>Description</th>
									</tr>
								</thead>
								<tbody>

									<!-- power -->
									<tr>
										<td>Power</td>
										<td>
											<div class="circle redCircle"></div>
										</td>
										<td>
											<div class="btn btn-danger btn-sm btn-block">Advanced Settings</div>
										</td>
										<td class="text-muted">Power status of your home.</td>
									</tr>

									<tr>
										<!-- water storage -->
										<td class="tdTopM5">Water Storage</td>
										<td class="tdTopM5">
											<div class="progress">
												<div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%">
													<span class="sr-only">50% Complete</span>
												</div>
											</div>
										</td>
										<td>
											<!-- red switch -->
											<div style="display: inline-block;">
												<div class="onoffswitch">
													<input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox onoffswitch-checkbox-red" id="myonoffswitch1" checked>
													<label class="onoffswitch-label onoffswitch-label-red" for="myonoffswitch1"></label>
												</div>
											</div>
											<button type="button" class="btn btn-default btn-sm pull-right">
												<span style="font-size: 150%;" class="glyphicon glyphicon-cog" aria-hidden="true"></span>
											</button>
										</td>
										<td class="text-muted">Power status of your home.</td>
									</tr>
									<tr>
										<!-- air conditioner -->
										<td class="tdTopM5">Air Conditioner</td>
										<td class="tdTopM5">
											<div class="circle whiteCircle"></div>
										</td>
										<td>
											<!-- red switch -->
											<div style="display: inline-block;">
												<div class="onoffswitch">
													<input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox onoffswitch-checkbox-red" id="myonoffswitch2">
													<label class="onoffswitch-label onoffswitch-label-red" for="myonoffswitch2"></label>
												</div>
											</div>
											<button type="button" class="btn btn-default btn-sm pull-right">
												<span style="font-size: 150%;" class="glyphicon glyphicon-cog" aria-hidden="true"></span>
											</button>
										</td>
										<td class="text-muted">Shows the status of air conditioning system.</td>
									</tr>
									<!-- main door -->
									<tr>
										<td class="tdTopM5">Entrance</td>
										<td class="tdTopM5">
											<div class="circle redCircle"></div>
										</td>
										<td>
											<!-- red switch -->
											<div style="display: inline-block;">
												<div class="onoffswitch">
													<input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox onoffswitch-checkbox-red" id="myonoffswitch3" checked>
													<label class="onoffswitch-label onoffswitch-label-red" for="myonoffswitch3"></label>
												</div>
											</div>
											<button type="button" class="btn btn-default btn-sm pull-right">
												<span style="font-size: 150%;" class="glyphicon glyphicon-cog" aria-hidden="true"></span>
											</button>
										</td>
										<td class="text-muted">Shows whether the main entrance is locked or open</td>
									</tr>
						</div>
					</div>
					</tbody>
					</table>
				</div>
			</div>
		</div>

		<!-- log -->
		<div class="col-md-3">
			<div class="panel panel-danger">
				<div class="panel-heading">
					<h3 class="panel-title">Notifications</h3>
				</div>
				<div class="panel-body">
					Panel content
				</div>
			</div>
			<div class="panel panel-danger">
				<div class="panel-heading">
					<h3 class="panel-title">Recent Log</h3>
				</div>
				<div class="panel-body">
					Panel content
				</div>
			</div>
			<div class="panel panel-danger">
				<div class="panel-body">
					<strong>Number of users online :</strong> 2
				</div>
			</div>
		</div>
		<div class="col-md-1">md1</div>
		</div>

		</div>

		<% include ./partials/footer %>
	</body>

</html>
