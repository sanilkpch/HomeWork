<!-- 

for overview pane in console.js
===============================

this file contains filterbox and color-cards for overview tab pane 

 -->

<!-- filter out with AngularJS-->
<div class="input-group" style="width: 70%;">
	<input type="text" autofocus class="form-control" placeholder="Filter out...">
	<span class="input-group-btn"><button class="btn btn-success" type="button">
											<span class="glyphicon glyphicon-filter" aria-hidden="true"></span>
	</button>
	</span>
</div>

<br>

<!-- overview contents starts here -->
<div class="row">
	<!-- content of the tab is inside this row -->
	<!-- col-1 -->
	<div class="col-md-6">

		<!-- composit cards for temp.inside and temp.outside -->
		<div class="row">

			<!-- card 1-->
			<div class="col-md-6">

				<!-- temp.inside card -->
				<div class="card card-green">
					<p class="card-update-time">Showing temperature inside</p>

					<div class="card-content">
						<h3>Inside</h3>
						<div class="card-content">
							<div class="card-center">
								<p class="in-temp">
									<sub>34</sub><sup class="in-degC">&#8451;</sup>
								</p>
							</div>
						</div>
					</div>
				</div>
				<!-- END of temp.inside card -->

			</div>

			<!-- card 2 -->
			<div class="col-md-6">

				<!-- card of temp.outside -->
				<div class="card card-green">
					<p class="card-update-time">Showing temperature outside</p>

					<div class="card-content">
						<h3>Outside</h3>
						<div class="card-content">
							<div class="card-center">
								<p class="in-temp">
									<sub>38</sub><sup class="in-degC">&#8451;</sup>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>


		<!-- water level -->
		<!-- card-blue -->
		<div class="card card-blue">
			<p class="card-update-time">Updated 1 min ago</p>

			<div class="row">
				<div class="col-md-6">
					<h3>Water level</h3>
					<div id="chart_div3" class="overview-card-charts">Loading...</div>
				</div>
				<div class="col-md-6">
					<p style="font-size: 35px;">23 hours left</p>
					<p>statistics based on your average usage.</p>
				</div>
			</div>
			<div class="card-bottom">
				<p>Windows are open.</p>
				<button type="button" class="btn btn-default">Manage</button>
			</div>
		</div>

		<!-- appleances on off -->
		<div class="card card-red">
			<p class="card-update-time">Status of main devices.</p>

			<div class="row">
				<div class="col-md-6">
					<h3>A/c ON</h3>
					<img class="img-responsive card-image" src="/images/appliances/ac-on.png" alt="AC ON">
				</div>
				<div class="col-md-6">
					<h3>Washing Machine</h3>
					<img class="img-responsive card-image" src="/images/appliances/wash-off.png" alt="AC ON">

				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h3>Refrigerator</h3>
					<img class="img-responsive card-image" src="/images/appliances/fridge-on.png" alt="AC ON">

				</div>
				<div class="col-md-6">
					<h3>Motor</h3>
					<img class="img-responsive card-image" src="/images/appliances/motor-off.png" alt="AC ON">

				</div>
			</div>
			<div class="card-bottom">
				<p>Windows are open.</p>
				<button type="button" class="btn btn-default">Manage</button>
			</div>
		</div>

	</div>
	<div class="col-md-6">

		<!-- doors closed -->
		<div class="card card-red">
			<p class="card-update-time">Status of doors and windows</p>
			<div class="row">
				<div class="col-md-6">
					<h3>Doors closed</h3>
					<div class="card-content">
						<p style="font-size: 40px;">2 <span style="color:#FFA0C1">/3</span></p>
						<p>Normal temerature inside.</p>
						<p>A/c is off.</p>
					</div>
				</div>
				<div class="col-md-6">
					<h3>Windows closed</h3>
					<div class="card-content">
						<!-- graph -->
						<div id="chart_div4" class="overview-card-charts">Loading...</div>
					</div>
				</div>
			</div>
			<div class="card-bottom">
				<p>Windows are open.</p>
				<button type="button" class="btn btn-default">Manage</button>
			</div>
		</div>

		<div class="row">
			<!-- possibility of rain -->
			<div class="col-md-6">
				<div class="card">
					<p class="card-update-time">Data from weather.com</p>
					<h3>No rain today</h3>
					<div class="card-content">
						<p class="temp" style="display:inline-block;">
							<span class="card-highlight"><sub>30</sub><sup class="degC">%</sup></span>
						</p>
						<p style="display:inline-block;"> chance of rain</p>
					</div>
				</div>
				<!-- inverter status -->
				<div class="card card-green">
					<p class="card-update-time">Inverter Status</p>
					<h3>Inverter</h3>
					<div class="card-content">
						<p class="temp" style="display:inline-block;">
							<span class="card-highlight"><sub>100</sub><sup class="degC">%</sup></span>
						</p>
						<p style="text-align: center;">Charging</p>
					</div>
				</div>

				<!-- inverter status -->
				<div class="card card-blue">
					<p class="card-update-time"></p>
					<h3>Inverter</h3>
					<div class="card-content">
						<div class="form-group">
							<textarea class="form-control" placeholder="Start typing..." rows="3"></textarea>
						</div>
					</div>
				</div>
			</div>

			<!-- connected devices -->
			<div class="col-md-6">
				<div class="card card-yellow">
					<p class="card-update-time">Only showing the status of connected devices.</p>
					<h3>Devices ON</h3>
					<div class="card-content">
						<!-- graph -->
						<div id="chart_div5" class="overview-card-charts">Loading...</div>
						<p>The less the usage, the more you save.</p>
					</div>
					<div class="card-bottom">
						<p>Normal usage</p>
						<button type="button" class="btn btn-default">Manage</button>
					</div>
				</div>

				<!-- feedback -->
				<div class="card">
					<p class="card-update-time">Tell us what's in your mind...</p>
					<h3>Feedback</h3>
					<div class="card-content">
						<div class="form-group">
							<textarea class="form-control" placeholder="Start typing..." rows="3"></textarea>
						</div>
					</div>
					<div class="card-bottom">
						<p>We value your words</p>
						<button type="button" class="btn btn-info">Send</button>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
<!-- internet weather update area -->
